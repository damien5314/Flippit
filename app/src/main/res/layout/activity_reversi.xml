<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    tools:context=".MainActivity">

	<LinearLayout
		android:id="@+id/ScoreOverlay"
		android:orientation="horizontal"
		android:background="@drawable/border"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
        android:gravity="center">

        <ImageView
            style="@style/PlayerIcon"
            android:background="@drawable/board_space_p1" />

		<TextView
			style="@style/ScoreLabel"
			android:id="@+id/p1_label"
            android:gravity="left|center"
			android:text="@string/player1_label_default"/>

		<TextView
            android:id="@+id/p1score"
			style="@style/ScoreValue"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/turnIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

		<TextView
            android:id="@+id/p2score"
			style="@style/ScoreValue"/>

		<TextView
			style="@style/ScoreLabel"
			android:id="@+id/p2_label"
            android:gravity="right|center"
			android:text="@string/player2_label"/>

        <ImageView
            style="@style/PlayerIcon"
            android:background="@drawable/board_space_p2" />

	</LinearLayout>

	<TableLayout
		android:id="@+id/GameGrid"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
        android:background="#42A321"/>

</LinearLayout>

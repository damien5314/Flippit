<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    tools:context=".MainActivity">

	<LinearLayout
		android:id="@+id/ScoreOverlay"
		style="@style/ScoreOverlay"
		android:background="@drawable/border">

        <ImageView
            style="@style/PlayerIcon"
            android:background="@drawable/board_space_p1" />

		<TextView
			android:id="@+id/p1_label"
			style="@style/PlayerLabel"
            android:gravity="left|center"
			android:text="@string/player1_label_default"/>

		<TextView
            android:id="@+id/p1score"
			style="@style/ScoreValue"/>

        <ImageView
            android:id="@+id/turnIndicator"
			style="@style/TurnIndicator"/>

		<TextView
            android:id="@+id/p2score"
			style="@style/ScoreValue"/>

		<TextView
			android:id="@+id/p2_label"
			style="@style/PlayerLabel"
            android:gravity="right|center"
			android:text="@string/player2_label"/>

        <ImageView
            style="@style/PlayerIcon"
            android:background="@drawable/board_space_p2" />

	</LinearLayout>

	<TableLayout
		android:id="@+id/GameGrid"
		style="@style/GameBoardTable"/>

</LinearLayout>

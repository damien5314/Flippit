<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/gameScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    tools:context=".MainActivity">

	<LinearLayout
		android:id="@+id/ScoreOverlay"
		style="@style/ScoreOverlay"
		android:background="@drawable/border">

        <LinearLayout
            style="@style/ScoreOverlaySection">

            <ImageView
                android:id="@+id/p1_icon"
                style="@style/PlayerIcon"
                android:background="@drawable/player_icon_p1"/>

            <TextView
                android:id="@+id/p1_label"
                style="@style/PlayerLabel"
                android:gravity="left|center"
                android:text="@string/player1_label_default"/>

            <TextView
                android:id="@+id/p1_score"
                android:text="88"
                style="@style/ScoreValue"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/turnIndicator"
            android:src="@drawable/ic_turn_neutral"
            style="@style/TurnIndicator"/>

        <LinearLayout
            style="@style/ScoreOverlaySection">

            <TextView
                android:id="@+id/p2_score"
                android:text="1"
                style="@style/ScoreValue"/>

            <TextView
                android:id="@+id/p2_label"
                style="@style/PlayerLabel"
                android:gravity="right|center"
                android:text="@string/player2_label"/>

            <ImageView
                android:id="@+id/p2_icon"
                style="@style/PlayerIcon"
                android:background="@drawable/player_icon_p2"/>

        </LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/gameArea"
		style="@style/GameArea">

		<LinearLayout
			android:id="@+id/board_panels"
			style="@style/BoardPanels">

			<Button
				android:id="@+id/board_panel_new_game"
				style="@style/BoardActionPanel"
				android:text="@string/multiplayer_new_match"
				android:onClick="startNewMatch"/>

			<Button
				android:id="@+id/board_panel_select_game"
				style="@style/BoardActionPanel"
				android:text="@string/multiplayer_select_match"
				android:onClick="selectMatch"/>

		</LinearLayout>

		<TableLayout
			android:id="@+id/MatchGrid"
			style="@style/GameBoardTable" />

		<RelativeLayout
			android:id="@+id/matchMessage"
			android:visibility="gone"
			style="@style/GameMessage">

			<TextView
				android:id="@+id/matchMessageText"
				style="@style/GameMessageText"/>

			<ImageView
				android:id="@+id/waiting_icon1"
				style="@style/GameMessageIcon"
				android:layout_toLeftOf="@id/matchMessageText"/>

			<ImageView
				android:id="@+id/waiting_icon2"
				style="@style/GameMessageIcon"
				android:layout_toRightOf="@id/matchMessageText"/>

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MultiPlayerMatchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/score_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:divider="@drawable/spacer_8dp_h"
                android:orientation="horizontal"
                android:showDividers="middle">

                <ImageView
                    android:id="@+id/icon_p1"
                    style="@style/PlayerIcon"
                    android:background="@drawable/player_icon_p1"
                    android:contentDescription="@string/player1_icon_content_description"/>

                <TextView
                    android:id="@+id/label_p1"
                    style="@style/PlayerLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    tools:text="jlawjklwakljwakljwalawkljwalk"/>

                <TextView
                    android:id="@+id/score_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/score_overlay_text_size"
                    android:textColor="@color/primary_text"
                    tools:text="88"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/turn_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:tint="@color/primary_text"
                tools:src="@drawable/ic_turn_indicator_p1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/score_overlay_text_size"
                    tools:text="88"/>

                <TextView
                    android:id="@+id/label_p2"
                    style="@style/PlayerLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    tools:text="jkhkjhjwajhkwahjkwhawhjk"/>

                <ImageView
                    android:id="@+id/icon_p2"
                    style="@style/PlayerIcon"
                    android:background="@drawable/player_icon_p2"
                    android:contentDescription="@string/player2_icon_content_description"/>

            </LinearLayout>

        </LinearLayout>

        <!--android:background="@color/board_color"-->
        <LinearLayout
            android:id="@+id/game_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/board_panels"
                style="@style/BoardActionPanels">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/board_panel_new_game"
                    style="@style/BoardActionPanel"
                    android:text="@string/multiplayer_new_match"/>

                <Button
                    android:id="@+id/board_panel_select_game"
                    style="@style/BoardActionPanel"
                    android:text="@string/multiplayer_select_match"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TableLayout
                android:id="@+id/match_grid"
                style="@style/GameBoardTable">

                <TableRow style="@style/MatchGridRow">

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>
                </TableRow>

                <TableRow style="@style/MatchGridRow">

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>
                </TableRow>

                <TableRow style="@style/MatchGridRow">

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>
                </TableRow>

                <TableRow style="@style/MatchGridRow">

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>
                </TableRow>

                <TableRow style="@style/MatchGridRow">

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>
                </TableRow>

                <TableRow style="@style/MatchGridRow">

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>
                </TableRow>

                <TableRow style="@style/MatchGridRow">

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>
                </TableRow>

                <TableRow style="@style/MatchGridRow">

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>

                    <Button style="@style/MatchGridSpace"/>
                </TableRow>

            </TableLayout>

            <RelativeLayout
                android:id="@+id/match_message"
                style="@style/GameMessage">

                <TextView
                    android:id="@+id/match_message_text"
                    style="@style/GameMessageText"/>

                <ImageView
                    android:id="@+id/match_message_icon_1"
                    style="@style/GameMessageIcon"
                    android:layout_toLeftOf="@id/match_message_text"/>

                <ImageView
                    android:id="@+id/match_message_icon_2"
                    style="@style/GameMessageIcon"
                    android:layout_toRightOf="@id/match_message_text"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

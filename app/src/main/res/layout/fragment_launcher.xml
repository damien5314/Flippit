<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.ddiehl.android.reversi.launcher.LauncherActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/activity_launcher_title"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/app_title_size"/>

    <Button
        android:id="@+id/button_start_1p"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/selectableItemBackground"
        android:text="@string/button_start_1p"
        android:textColor="@color/primary_text"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/button_start_mp"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/selectableItemBackground"
        android:text="@string/button_start_mp"
        android:textColor="@color/primary_text"
        android:textSize="22sp"/>

</LinearLayout>

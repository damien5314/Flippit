<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- to remove the default action -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item> <!-- For 2.x version -->
        <item name="android:windowActionModeOverlay">true</item>
        <!-- app background color -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="GameBG" parent="AppTheme">
        <!-- app background color -->
        <item name="android:windowBackground">@color/board_color</item>
    </style>

    <style name="PlayerIcon">
        <item name="android:layout_width">@dimen/player_icon_size</item>
        <item name="android:layout_height">@dimen/player_icon_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:radius">@dimen/player_icon_corner_radius</item>
    </style>

    <style name="BoardActionPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">112dp</item>
        <item name="android:layout_marginTop">@dimen/board_panel_margin</item>
        <item name="android:layout_marginBottom">@dimen/board_panel_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/board_action_panel</item>
        <item name="android:textSize">@dimen/board_panel_text_size</item>
        <item name="android:textColor">@color/board_action_panel_color</item>
    </style>

    <style name="MatchGridRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MatchGridSpace">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/space_padding</item>
        <item name="android:background">@drawable/board_space_neutral</item>
    </style>

    <style name="GameMessageIcon">
        <item name="android:layout_width">@dimen/player_icon_size</item>
        <item name="android:layout_height">@dimen/player_icon_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:radius">@dimen/player_icon_corner_radius</item>
    </style>

    <style name="HowToPlayHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:paddingBottom">@dimen/how_to_play_header_padding</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/how_to_play_header_size</item>
    </style>

    <style name="HowToPlayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/how_to_play_text_size</item>
    </style>

    <style name="HowToPlayImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/how_to_play_image_padding</item>
        <item name="android:paddingBottom">@dimen/how_to_play_image_padding</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="MatchToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
    </style>

    <style name="MatchToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">20sp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
